@model IEnumerable<MvcApplication1.Models.Sklad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Склад</h2>

<p>@if (User.IsInRole("admin")) {
    @Html.ActionLink("Добавить товар", "Create")
}
</p>
<table>
    <tr>
        
        <th>
            Наименование
        </th>
        <th>
            Количество
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.nazvanie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new {  id=item.idTovara}) |
            
            @Html.ActionLink("Списать", "Delete", new {  id=item.idTovara })
        </td>
    </tr>
}

</table>
