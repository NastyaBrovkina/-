@model MvcApplication1.Models.Sklad

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование данных</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Склад</legend>

        <div class="editor-label">
            Артикул
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idTovara)
            @Html.ValidationMessageFor(model => model.idTovara)
        </div>

        <div class="editor-label">
           Наименование
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nazvanie)
            @Html.ValidationMessageFor(model => model.nazvanie)
        </div>

        <div class="editor-label">
           Количество
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Count)
            @Html.ValidationMessageFor(model => model.Count)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
