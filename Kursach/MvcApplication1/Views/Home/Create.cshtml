@model MvcApplication1.Models.Tovar

@{
    ViewBag.Title = "Добавление нового товара в каталог";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление нового товара в каталог</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tovar</legend>

        

        <div class="editor-label">
            Наименование
        </div>
       
        <div class="editor-field">
                        
            @Html.DropDownList("idTovara", String.Empty)
            @Html.ValidationMessageFor(model => model.idTovara)
            
        </div>

        <div class="editor-label">
            Производитель
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.proizvoditel)
            @Html.ValidationMessageFor(model => model.proizvoditel)
        </div>

        <div class="editor-label">
            Цена
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>

        <div class="editor-label">
           Описание
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.opisanie)
            @Html.ValidationMessageFor(model => model.opisanie)
        </div>

        <p>
            <input type="submit" value="Добавить" />
        </p>
        
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к каталогу товаров", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
