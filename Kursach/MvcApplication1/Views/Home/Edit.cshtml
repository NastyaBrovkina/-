@model MvcApplication1.Models.Tovar

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать </h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tovar</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.idTovara, "Sklad")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idTovara)
            @Html.ValidationMessageFor(model => model.idTovara)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.proizvoditel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.proizvoditel)
            @Html.ValidationMessageFor(model => model.proizvoditel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.opisanie)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.opisanie)
            @Html.ValidationMessageFor(model => model.opisanie)
        </div>

        @Html.HiddenFor(model => model.id)
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к каталогу товаров", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
