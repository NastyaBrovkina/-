@model MvcApplication1.Models.Korzina

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление товара из корзины</h2>

<h3>Удалить товар из корзины?</h3>
<fieldset>
    <legend>Korzina</legend>
    <div class="display-label">
        Артикул
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.idTovara)
    </div>

    <div class="display-label">
         Наименование
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Sklad.nazvanie)
    </div>
    <div class="display-label">
        Производитель
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Tovar.proizvoditel)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Удалить" /> |
        @Html.ActionLink("Вернуться к корзине", "Index")
    </p>
}
